<!--Card 1-->
    <androidx.cardview.widget.CardView
        android:id="@+id/Card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp"
        app:cardBackgroundColor="@color/Blue1"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/avatar1"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginStart="10dp"
                android:padding="10dp"
                app:srcCompat="@drawable/avatar_sky2" />

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/avatar1"
                android:layout_marginStart="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="3dp"
                android:text="@string/saurabh_yadav"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="@font/arima_madurai_bold"
                />

            <TextView
                android:id="@+id/roll1"
                android:layout_below="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/e_47"
                android:textColor="@color/white"
                android:textSize="11sp"
                />

            <TextView
                android:id="@+id/sem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name1"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/roll1"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="3rd Sem"
                android:textColor="@color/white"
                android:textSize="11sp" android:fontFamily="@font/arima_madurai_bold"
                />
            <TextView
                android:fontFamily="@font/cambo"
                android:id="@+id/branch1"
                android:layout_below="@+id/name1"
                android:layout_toEndOf="@+id/roll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/cse"
                android:textColor="@color/white"
                android:textSize="11sp"
                />

            <ImageButton
                android:id="@+id/mail1"
                android:layout_below="@id/branch1"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                />

            <ImageView
                android:layout_below="@+id/branch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/gmail"
                />

            <ImageButton
                android:id="@+id/insta1"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_below="@id/mail1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/insta_bg" />

            <ImageView
                android:layout_below="@id/mail1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/insta_icon"
                />

            <ImageButton
                android:id="@+id/in1"
                android:layout_below="@id/insta1"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:background="#0077b5"
                />

            <ImageView
